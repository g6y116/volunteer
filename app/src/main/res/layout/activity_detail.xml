<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="g6y116.volunteer.viewmodel.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appLabel"
            style="@style/app_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginBottom="@dimen/small_margin"
                style="@style/label_text"
                android:text="세부정보"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivBookMark"
                android:layout_marginEnd="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_bookmark_border_24"
                android:backgroundTint="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/appLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/extra_small_margin"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingVertical="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvField"
                            style="@style/small_dark_text"
                            android:layout_marginTop="@dimen/extra_small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            tools:text="봉사 분야"
                            app:text="@{viewmodel.volunteer.field}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/tvState"
                            style="@style/small_dark_text"
                            android:layout_marginTop="@dimen/extra_small_margin"
                            android:layout_marginEnd="@dimen/medium_margin"
                            app:state="@{viewmodel.volunteer.state}"
                            tools:text="모집 XX"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_margin="@dimen/large_margin"
                            style="@style/large_dark_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="제목"
                            app:text="@{viewmodel.volunteer.title}"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/tvField"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tvHost"
                            android:layout_marginTop="@dimen/large_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="모집 기관"
                            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.host}"
                            app:layout_constraintTop_toTopOf="@+id/tvHost"
                            app:layout_constraintStart_toEndOf="@+id/tvHost"/>

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="등록 기관"
                            app:layout_constraintTop_toBottomOf="@+id/tvHost"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.area}"
                            app:layout_constraintTop_toTopOf="@+id/tvArea"
                            app:layout_constraintStart_toEndOf="@+id/tvArea"/>

                        <TextView
                            android:id="@+id/tvPlace"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="봉사 장소"
                            app:layout_constraintTop_toBottomOf="@+id/tvArea"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/tvPlaceValue"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.place}"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintTop_toTopOf="@+id/tvPlace"
                            app:layout_constraintStart_toEndOf="@+id/tvPlace"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tvNum"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="모집 인원"
                            app:layout_constraintTop_toBottomOf="@+id/tvPlaceValue"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text='@{String.valueOf(viewmodel.volunteer.num) + "명"}'
                            app:layout_constraintTop_toTopOf="@+id/tvNum"
                            app:layout_constraintStart_toEndOf="@+id/tvNum"/>

                        <TextView
                            android:id="@+id/tvPossible"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="지원 자격"
                            app:layout_constraintTop_toBottomOf="@+id/tvNum"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            app:adultPossible="@{viewmodel.volunteer.isAdultPossible}"
                            app:youngPossible="@{viewmodel.volunteer.isYoungPossible}"
                            app:layout_constraintTop_toTopOf="@+id/tvPossible"
                            app:layout_constraintStart_toEndOf="@+id/tvPossible"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/tvContents"
                        style="@style/small_dark_text"
                        android:padding="@dimen/medium_margin"
                        tools:text="내용"
                        app:text="@{viewmodel.volunteer.contents}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:paddingVertical="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_recruitment" />

                            <TextView
                                android:layout_marginTop="@dimen/extra_small_margin"
                                style="@style/small_text"
                                android:text="모집 기간" />

                            <TextView
                                android:layout_marginTop="@dimen/extra_small_margin"
                                style="@style/small_dark_text"
                                app:sDate="@{viewmodel.volunteer.nsDate}"
                                app:eDate="@{viewmodel.volunteer.neDate}"
                                tools:text="mm월dd일 ~ mm월dd일" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_day" />

                            <TextView
                                android:layout_marginTop="@dimen/extra_small_margin"
                                style="@style/small_text"
                                android:text="봉사 기간" />

                            <TextView
                                android:layout_marginTop="@dimen/extra_small_margin"
                                style="@style/small_dark_text"
                                app:sDate="@{viewmodel.volunteer.sDate}"
                                app:eDate="@{viewmodel.volunteer.eDate}"
                                tools:text="mm월dd일 ~ mm월dd일" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_time" />

                            <TextView
                                android:layout_marginTop="@dimen/extra_small_margin"
                                style="@style/small_text"
                                android:text="봉사 시간" />

                            <TextView
                                android:layout_marginTop="4dp"
                                style="@style/small_dark_text"
                                app:sHour="@{String.valueOf(viewmodel.volunteer.sHour)}"
                                app:eHour="@{String.valueOf(viewmodel.volunteer.eHour)}"
                                tools:text="hh ~ hh" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="6dp"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingVertical="@dimen/medium_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvManager"
                            android:layout_marginTop="@dimen/extra_small_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="담당자"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.manager}"
                            app:layout_constraintTop_toTopOf="@+id/tvManager"
                            app:layout_constraintStart_toEndOf="@+id/tvManager"/>

                        <TextView
                            android:id="@+id/tvTel"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="연락처"
                            app:layout_constraintTop_toBottomOf="@id/tvManager"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.tel}"
                            app:layout_constraintTop_toTopOf="@+id/tvTel"
                            app:layout_constraintStart_toEndOf="@+id/tvTel"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="이메일"
                            app:layout_constraintTop_toBottomOf="@id/tvTel"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            tools:text="XXXX"
                            android:text="@{viewmodel.volunteer.email}"
                            app:layout_constraintTop_toTopOf="@+id/tvEmail"
                            app:layout_constraintStart_toEndOf="@+id/tvEmail"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardUseCompatPadding="true">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn"
                    style="@style/solid_button"
                    android:text="@string/apply" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>