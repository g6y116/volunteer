<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity"
    android:background="@color/gray_2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appLabel"
        style="@style/app_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginBottom="@dimen/small_margin"
            style="@style/label_text"
            android:text="세부정보"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/ibBookMark"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_bookmark_border_24"
            android:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/appLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:paddingVertical="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProgramId"
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/small_dark_text"
                            android:text="12345678" />

                        <TextView
                            android:id="@+id/tvField"
                            style="@style/small_dark_text"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/medium_margin"
                            android:text="봉사 분야 > " />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvVolunteerTitle"
                        android:layout_margin="@dimen/medium_margin"
                        android:gravity="center"
                        style="@style/large_dark_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="봉사 제목"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="봉사 지역" />

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="서울시 ㅇㅇ구"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="봉사 장소" />

                        <TextView
                            android:id="@+id/tvPlace"
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_marginEnd="@dimen/large_margin"
                            style="@style/medium_dark_text"
                            android:text="ㅇㅇ 마을 회관"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="모집 인원" />

                        <TextView
                            android:id="@+id/tvNeedPersonNumber"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="1명"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="봉사 상태" />

                        <TextView
                            android:id="@+id/tvState"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="모집 중"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:padding="@dimen/medium_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvContents"
                        style="@style/medium_dark_text"
                        android:text="봉사 내용" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:paddingVertical="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_recruitment" />

                        <TextView
                            android:layout_marginTop="4dp"
                            style="@style/medium_dark_text"
                            android:text="모집 기간" />

                        <TextView
                            android:id="@+id/tvNoticeDay"
                            android:layout_marginTop="4dp"
                            style="@style/small_dark_text"
                            android:text="모집 기간"
                            android:textColor="@color/sky_blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_day" />

                        <TextView
                            android:layout_marginTop="4dp"
                            style="@style/medium_dark_text"
                            android:text="봉사 기간" />

                        <TextView
                            android:id="@+id/tvDay"
                            android:layout_marginTop="4dp"
                            style="@style/small_dark_text"
                            android:text="봉사 기간"
                            android:textColor="@color/sky_blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_time" />

                        <TextView
                            android:layout_marginTop="4dp"
                            style="@style/medium_dark_text"
                            android:text="봉사 시간" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_marginTop="4dp"
                            style="@style/small_dark_text"
                            android:text="봉사 시간"
                            android:textColor="@color/sky_blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_possible" />

                        <TextView
                            android:id="@+id/tvIsAdultPossible"
                            android:layout_marginTop="4dp"
                            style="@style/small_dark_text"
                            android:text="성인 가능" />

                        <TextView
                            android:id="@+id/tvIsYoungPossible"
                            android:layout_marginTop="4dp"
                            style="@style/small_dark_text"
                            android:text="청소년 가능" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:paddingVertical="@dimen/medium_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="관리자" />

                        <TextView
                            android:id="@+id/tvManager"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="관리자"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="연락처" />

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="연락처"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEmail"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/medium_margin"
                            style="@style/medium_text"
                            android:text="이메일" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_marginStart="@dimen/small_margin"
                            style="@style/medium_dark_text"
                            android:text="이메일"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/small_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUrl"
                style="@style/solid_button"
                android:text="신청하기" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>