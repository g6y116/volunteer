<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="g6y116.volunteer.feature.ui.viewmodel.DetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:scrollbars="none"
                android:overScrollMode="never"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottomL">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/margin_extra_small"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            style="@style/card"
                            android:paddingVertical="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fieldTv"
                                style="@style/small_text"
                                android:layout_marginTop="@dimen/margin_extra_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="모집분야"
                                app:text="@{viewmodel.detailUiState.field}"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/stateTv"
                                style="@style/small_text"
                                android:layout_marginTop="@dimen/margin_extra_small"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:state="@{viewmodel.detailUiState.state}"
                                tools:text="모집유형"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/titleTv"
                                style="@style/large_dark_text"
                                android:layout_margin="@dimen/margin_large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                tools:text="제목"
                                app:text="@{viewmodel.detailUiState.title}"
                                app:layout_constraintTop_toBottomOf="@+id/fieldTv"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/hostTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_large"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/host"
                                app:layout_constraintTop_toBottomOf="@+id/titleTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:layout_marginStart="@dimen/margin_small"
                                style="@style/medium_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.host}"
                                app:layout_constraintTop_toTopOf="@+id/hostTv"
                                app:layout_constraintStart_toEndOf="@+id/hostTv"/>

                            <TextView
                                android:id="@+id/areaTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/area"
                                app:layout_constraintTop_toBottomOf="@+id/hostTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.area}"
                                app:layout_constraintTop_toTopOf="@+id/areaTv"
                                app:layout_constraintStart_toEndOf="@+id/areaTv"/>

                            <TextView
                                android:id="@+id/placeTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/place"
                                app:layout_constraintTop_toBottomOf="@+id/areaTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/placeValueTv"
                                style="@style/medium_text"
                                android:layout_marginHorizontal="@dimen/margin_small"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.place}"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintTop_toTopOf="@+id/placeTv"
                                app:layout_constraintStart_toEndOf="@+id/placeTv"
                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/personTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/person"
                                app:layout_constraintTop_toBottomOf="@+id/placeValueTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text='@{String.valueOf(viewmodel.detailUiState.person) + "명"}'
                                app:layout_constraintTop_toTopOf="@+id/personTv"
                                app:layout_constraintStart_toEndOf="@+id/personTv"/>

                            <TextView
                                android:id="@+id/typeTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type"
                                app:layout_constraintTop_toBottomOf="@+id/personTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                app:isAdult="@{viewmodel.detailUiState.adult}"
                                app:isYoung="@{viewmodel.detailUiState.young}"
                                app:layout_constraintTop_toTopOf="@+id/typeTv"
                                app:layout_constraintStart_toEndOf="@+id/typeTv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <FrameLayout
                            style="@style/card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/contentsTv"
                                style="@style/small_text"
                                android:padding="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="내용"
                                app:text="@{viewmodel.detailUiState.contents}" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            style="@style/card"
                            android:paddingVertical="@dimen/margin_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_recruitment" />

                                <TextView
                                    style="@style/small_light_text"
                                    android:layout_marginTop="@dimen/margin_extra_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/notice_period" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_marginTop="@dimen/margin_extra_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:sDate="@{viewmodel.detailUiState.nsDate}"
                                    app:eDate="@{viewmodel.detailUiState.neDate}"
                                    tools:text="mm월dd일 ~ mm월dd일" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_day" />

                                <TextView
                                    style="@style/small_light_text"
                                    android:layout_marginTop="@dimen/margin_extra_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/volunteer_period" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_marginTop="@dimen/margin_extra_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:sDate="@{viewmodel.detailUiState.sDate}"
                                    app:eDate="@{viewmodel.detailUiState.eDate}"
                                    tools:text="mm월dd일 ~ mm월dd일" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_time" />

                                <TextView
                                    style="@style/small_light_text"
                                    android:layout_marginTop="@dimen/margin_extra_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/volunteer_time" />

                                <TextView
                                    android:layout_marginTop="4dp"
                                    style="@style/small_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:sHour="@{String.valueOf(viewmodel.detailUiState.sHour)}"
                                    app:eHour="@{String.valueOf(viewmodel.detailUiState.eHour)}"
                                    tools:text="hh ~ hh" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

<!--                    <androidx.cardview.widget.CardView-->
<!--                        android:layout_marginBottom="6dp"-->
<!--                        android:layout_marginHorizontal="@dimen/margin_small"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        app:cardCornerRadius="@dimen/card_radius"-->
<!--                        app:cardUseCompatPadding="true">-->

<!--                        <FrameLayout-->
<!--                            android:id="@+id/mapL"-->
<!--                            style="@style/card"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="400dp"-->
<!--                            android:nestedScrollingEnabled="false">-->
<!--                        </FrameLayout>-->
<!--                    </androidx.cardview.widget.CardView>-->

                    <androidx.cardview.widget.CardView
                        android:layout_marginBottom="6dp"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            style="@style/card"
                            android:paddingVertical="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/managerTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_extra_small"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manager"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.manager}"
                                app:layout_constraintTop_toTopOf="@+id/managerTv"
                                app:layout_constraintStart_toEndOf="@+id/managerTv"/>

                            <TextView
                                android:id="@+id/telTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_medium"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tel"
                                app:layout_constraintTop_toBottomOf="@id/managerTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.tel}"
                                app:layout_constraintTop_toTopOf="@+id/telTv"
                                app:layout_constraintStart_toEndOf="@+id/telTv"/>

                            <TextView
                                android:id="@+id/emailTv"
                                style="@style/medium_light_text"
                                android:layout_marginTop="@dimen/margin_medium"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                app:layout_constraintTop_toBottomOf="@id/telTv"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                style="@style/medium_text"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="XXXX"
                                android:text="@{viewmodel.detailUiState.email}"
                                app:layout_constraintTop_toTopOf="@+id/emailTv"
                                app:layout_constraintStart_toEndOf="@+id/emailTv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomL"
                android:layout_margin="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn"
                    style="@style/solid_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apply" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_margin="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_map_24"
                android:tint="@color/white"
                android:tintMode="src_in"
                app:fabSize="mini"
                app:tint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottomL"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>