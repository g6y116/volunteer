<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- common -->
    <style name="toolbar">
        <item name="android:paddingBottom">@dimen/padding_extra_small</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:background">@color/base</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="card">
        <item name="android:background">@color/card</item>
    </style>

    <style name="chip">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="chipBackgroundColor">@color/base</item>
        <item name="chipStrokeWidth">@dimen/line</item>
        <item name="chipStrokeColor">@color/active_line</item>
        <item name="chipCornerRadius">@dimen/chip_radius</item>
        <item name="chipMinTouchTargetSize">@dimen/zero</item>
    </style>

    <style name="bottom_sheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottom_sheet_background</item>
    </style>

    <style name="bottom_sheet_background" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="bottom_sheet_item">
        <item name="android:textSize">@dimen/text_size_bottom_sheet_item</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="date_picker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderToggleButton">@style/toggle_button</item>
    </style>

    <style name="toggle_button" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="app_divide">
        <item name="android:layout_height">@dimen/line</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <!-- textView -->
    <style name="label_text">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="large_light_text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="large_text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="large_dark_text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="medium_light_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="medium_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="medium_dark_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="small_light_text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="small_dark_text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- button -->
    <style name="solid_button">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/btn_solid</item>
    </style>

    <!-- etc -->
    <style name="bottom_navigation">
        <item name="android:background">@color/base</item>
        <item name="itemBackground">@color/base</item>
    </style>
</resources>